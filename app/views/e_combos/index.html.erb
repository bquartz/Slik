	</div>
	<div class="combo_precio">
		<%=combo.precio%>
	</div>
	<div class="combo_ver">
		<%=link_to "Ver", e_combo_path(combo.id) %> 
	</div>
  <div class="combo_eliminar">
    <%=link_to "Eliminar",combo,:confirm => "Â¿Esta seguro?", :method =>:delete %> 
  </div>
</div>
<%end%> 
