<%= form_for @ecombo, :html=>{:class=>"well"} do |combo| %>
  <%= render "shared/error_messages", :target => @ecombo %>
      <%=combo.label :nombre%>
      <%=combo.text_field :nombre%>
      <%=combo.label :precio%>
      <%=combo.text_field :precio%>
  <%= render :partial => 'products/autocomplete', 
      :locals => {:f => combo,:asoc => :d_combos} %>

  <%= combo.fields_for :d_combos do |builder| %> 
    <%= render :partial => 'd_combo_fields', 
      :locals => {:f => builder, :p => @pro_hash}%>
  <% end %>
  <br />
  <br />
  <%=combo.submit :class=>"btn"%>
<% end %>
